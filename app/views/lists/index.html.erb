<%# Create an index view %>
<style>
  h1 { 
    font-family: "Parisienne", cursive; 
    font-size: 50pt; 
    padding: 10px; 
    font-weight: bold;
  }
</style>

<!-- Hero Unit -->
<div class="center">
  <h1>Taomar Bucket</h1>
  <p>A place for Michal &amp; Rachel to store all their future adventures.</p>
  <p><%= link_to "The Adventure Begins", new_list_url, :class => "btn btn-primary" %></p>
</div>

<!-- Main Content -->
<table class="table table-striped">
  <thead>
  	<th>Task</th>
  	<th>Description</th>
  	<th>Actions</th>
  </thead>

  <tbody>
	<% @lists.each do |single_list| %>
	  <tr>
	  	<td><%= link_to single_list.task, list_path(single_list) %></td>
		  <td><%= single_list.description %></td>
		  <td><%= link_to 'Edit', edit_list_path(single_list) %> |
		      <%= link_to 'Destroy', single_list, method: :delete, data: { confirm: 
		    	            'Are you sure?'} %></td>
	  </tr>
	<% end %>
  </tbody>
</table>

